@page "/Login"
@model food_web.Pages.IndexModel2
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Login</title>
</head>

<body>
    <h2>Login</h2>
    <form method="post" asp-page-handler="OnPostAsyncLogin">
        <div>
            <label for="Name">Username:</label>
            <input type="text" id="Name" name="Name" asp-for="name" />
            <span asp-validation-for="name"></span>
        </div>
        <div>
            <label for="Password">Password:</label>
            <input type="text" id="Password" name="Password" asp-for="password" />
            <span asp-validation-for="password"></span>
        </div>
        <button type="submit">Login</button>
    </form>


    <footer>
        <span>&copy; 2023 - My Website</span>
    </footer>
</body>
</html>
